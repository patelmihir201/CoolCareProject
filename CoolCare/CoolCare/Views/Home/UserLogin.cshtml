
@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/FormLayout.cshtml";

}
@{
    Html.RenderPartial("~/Views/Shared/HeaderPartialView.cshtml");
}

<link href="~/Content/CoolCare/css/UserLogin.css" rel="stylesheet" />

<div class="container">
    <form class="row needs-validation formUserLogin" novalidate>
        <h1 align="center" class="mb-5">Login Form</h1>
        <div class="col-md-12 ">
            <label for="validationCustom01" class="form-label">Email</label>
            <input type="text" oninput="validate(this)" class="form-control" id="validationCustom01" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide Email.
            </div>
        </div>
        <div class="col-md-12 col-lg-12 mt-3">
            <label for="validationCustom02" class="form-label">Password</label>
            <input type="text" oninput="validate(this)" class="form-control" id="validationCustom02" required>
            <div class="valid-feedback">
                Looks good!
            </div>

            <div class="invalid-feedback">
                Please provide Password.
            </div>
        </div>

        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label tncLable" for="invalidCheck">
                    Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <div class="col-12 text-center mt-4">
            <button class="btn btn-primary px-3 py-2 submitButton" type="submit">Submit form</button>
        </div>
        <div>
            <p class="mb-0 text-center mt-3"><a href="forgot.html" class="text-white font-weight-bold">Forgot your password ?</a></p>
        </div>
        <div class="text-center mt-4">
            <p><small class="text-white mr-2">Don't have an account ?</small> <a href="/Home/UserSignUp" class="text-white font-weight-bold">Create an account</a></p>
        </div>
    </form>
</div>


@{
    Html.RenderPartial("~/Views/Shared/FooterPartialView.cshtml");
}